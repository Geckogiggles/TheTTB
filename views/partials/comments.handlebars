<div class='col-md-6 comment-list'>
  {{#if post.comments}}

    <h3>Comments:</h3>

    {{#each post.comments as |comment|}}
      <div class='row mb-2'>
        <div class='col-md-8'>
          <h4><a
              href='/post/{{comment.post.id}}'
              class='rainbow'
            >{{comment.title}}</a></h4>
          <p>Created by
            {{comment.user.name}}
            on
            {{format_date comment.date_created}}</p>
          <p>{{comment.description}}</p>
        </div>
        <div class='col-md-4'>
          <button
            class='btn btn-sm btn-danger'
            data-id='{{comment.id}}'
          >DELETE</button>
        </div>
      </div>
    {{/each}}
    {{#else}}
      <h3>NO comments found</h3>
    {{/else}}
  {{/if}}
</div>
<script src='/js/comment.js'></script>